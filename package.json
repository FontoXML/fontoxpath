{
	"name": "fontoxpath",
	"version": "3.0.0",
	"description": "A minimalistic XPath 3.1 engine in JavaScript",
	"main": "dist/fontoxpath.js",
	"directories": {
		"test": "test"
	},
	"typings": "dist/fontoxpath.d.ts",
	"scripts": {
		"prepare": "npm run build",
		"build": "node ./build.js",
		"start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"tsc -p ./demo/tsconfig.json -w\" \"ts-node ./demo/server.ts --dist\"",
		"test": "ts-mocha --require test/testhook.js \"test/specs/**/*.ts\"",
		"ci-test": "nyc --no-clean ts-mocha --paths \"test/specs/**/*.ts\" -p test/tsconfig.json",
		"integrationtests": "ts-mocha --require test/testhook.js \"test/specs/parsing/**/*.ts\" -p test/tsconfig.json",
		"qt3tests": "ts-mocha --paths -p test/tsconfig.json test/qt3tests.ts",
		"ci-qt3tests": "nyc --no-clean ts-mocha --paths -p test/tsconfig.json test/qt3tests.ts",
		"qt3testsxqueryx": "ts-mocha --paths -p test/tsconfig.json test/qt3testsXQueryX.ts",
		"xqutstests": "ts-mocha --paths -p test/tsconfig.json test/xqutsTests.ts",
		"ci-xqutstests": "nyc --no-clean ts-mocha --paths -p test/tsconfig.json test/xqutsTests.ts",
		"xqutstestsxqueryx": "ts-mocha --paths -p test/tsconfig.json test/xqutsTestsXQueryX.ts",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"alltests": "ts-mocha --paths -p test/tsconfig.json \"test/specs/**/*.ts\" test/qt3tests.ts test/qt3testsXQueryX.ts test/xqutsTests.ts test/xqutsTestsXQueryX.ts"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:FontoXML/fontoxpath.git"
	},
	"files": [
		"dist/fontoxpath.js",
		"dist/fontoxpath.d.ts",
		"dist/fontoxpath.js.map"
	],
	"keywords": [
		"FontoXPath",
		"fontoxpath",
		"FontoXML",
		"XPath",
		"XPath3.1",
		"xpath",
		"xpath3.1",
		"W3C",
		"w3c",
		"XML",
		"xml",
		"XQuery",
		"xquery",
		"XQuery Update Facility",
		"xquery update facility",
		"XQUF",
		"xquf",
		"fontoxml"
	],
	"author": "The FontoXML team",
	"license": "MIT",
	"homepage": "https://github.com/FontoXML/fontoxpath",
	"devDependencies": {
		"@microsoft/api-extractor": "^6.3.0",
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.18",
		"@types/node-static": "^0.7.2",
		"@types/sinon": "^7.0.3",
		"chai": "^4.1.2",
		"concurrently": "^4.1.0",
		"coveralls": "^3.0.2",
		"fs-extra": "^7.0.1",
		"google-closure-compiler": "^20181125.0.1",
		"istanbul": "^0.4.5",
		"mocha": "^5.2.0",
		"node-static": "^0.7.11",
		"nyc": "^13.1.0",
		"pegjs": "^0.10.0",
		"prettier": "^1.15.3",
		"sinon": "^6.3.4",
		"sinon-chai": "^3.2.0",
		"slimdom": "^2.1.3",
		"slimdom-sax-parser": "^1.1.3",
		"source-map-support": "^0.5.9",
		"ts-mocha": "^2.0.0",
		"ts-node": "^7.0.1",
		"tsconfig-paths": "^3.7.0",
		"tsickle": "^0.34.0",
		"tslint": "^5.12.0",
		"tslint-config-prettier": "^1.17.0",
		"typescript": "^3.1.6",
		"uglify-js": "^3.4.9"
	},
	"dependencies": {}
}
