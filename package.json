{
	"name": "fontoxpath",
	"version": "3.0.0-alpha.4",
	"description": "A minimalistic XPath 3.1 engine in JavaScript",
	"main": "dist/fontoxpath.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "node ./build.js",
		"test": "mocha --recursive --require @babel/register test/specs/",
		"ci-test": "nyc --no-clean mocha --recursive --require @babel/register test/specs/",
		"integrationtests": "mocha --recursive --require @babel/register test/specs/parsing --dist",
		"qt3tests": "mocha --require @babel/register test/qt3tests.js",
		"ci-qt3tests": "nyc --no-clean mocha --require @babel/register test/qt3tests.js",
		"qt3testsxqueryx": "mocha --require @babel/register test/qt3testsXQueryX.js",
		"xqutstests": "mocha --require @babel/register test/xqutsTests.js",
		"ci-xqutstests": "nyc --no-clean mocha --require @babel/register test/xqutsTests.js",
		"xqutstestsxqueryx": "mocha --require @babel/register test/xqutsTestsXQueryX.js",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"alltests": "mocha --recursive --require @babel/register test/specs/ test/qt3tests test/qt3testsXQueryX test/xqutsTests test/xqutsTestsXQueryX"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:FontoXML/fontoxpath.git"
	},
	"files": [
		"dist/fontoxpath.js",
		"dist/fontoxpath.js.map"
	],
	"keywords": [
		"FontoXPath",
		"fontoxpath",
		"FontoXML",
		"XPath",
		"XPath3.1",
		"xpath",
		"xpath3.1",
		"W3C",
		"w3c",
		"XML",
		"xml",
		"XQuery",
		"xquery",
		"XQuery Update Facility",
		"xquery update facility",
		"XQUF",
		"xquf",
		"fontoxml"
	],
	"author": "The FontoXML team",
	"license": "MIT",
	"homepage": "https://github.com/FontoXML/fontoxpath",
	"devDependencies": {
		"@babel/core": "^7.1.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/register": "^7.0.0",
		"babel-plugin-istanbul": "^5.1.0",
		"babel-plugin-module-resolver": "^3.1.1",
		"chai": "^4.1.2",
		"coveralls": "^3.0.2",
		"google-closure-compiler": "^20181028.0.1",
		"mocha": "^5.2.0",
		"node-static-alias": "^1.1.2",
		"nyc": "^13.1.0",
		"pegjs": "^0.10.0",
		"sinon": "^6.3.4",
		"sinon-chai": "^3.2.0",
		"slimdom": "^2.1.3",
		"slimdom-sax-parser": "^1.1.3",
		"uglify-js": "^3.4.9"
	},
	"dependencies": {}
}
