{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "rules": {
    "array-type": [true, "array"],
    "class-name": true,
    "comment-format": [true, "check-space"],
    "no-unnecessary-type-assertion": true,
    "member-ordering": [
      true,
      {
        "alphabetiz": true,
        "order": "fields-first"
      }
    ],
    "no-var-keyword": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"]
  }
}
