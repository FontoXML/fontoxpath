{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"fontoxpath": ["../src/index.ts"],
			"fontoxpath/*": ["../src/*"],
			"test-helpers/*": ["./helpers/*"]
		},
		"lib": ["es6", "es2017", "esnext.asynciterable"],
		"target": "es2017",
		"strict": false,
		"allowJs": true,
		"types": ["mocha", "node"],
		"moduleResolution": "node",
		"target": "es2020"
	},
	"include": ["../src/**/*.ts", "./**/*.ts"]
}
