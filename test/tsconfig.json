{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "..",
		"paths": {
			"fontoxpath": [
				"src/index.ts"
			],
			"fontoxpath/*": [
				"src/*"
			],
			"test-helpers/*": [
				"test/helpers/*"
			]
		},
		"inlineSourceMap": true,
		"inlineSources": true,
		"types": [
			"mocha",
			"node"
		]
	},
	"include": [
		"../src/**/*",
		"../test/**/*"
	]
}
